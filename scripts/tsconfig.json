{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["node"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["apps/web/*"],
      "@repo/db": ["packages/db/src"],
      "@repo/db/*": ["packages/db/src/*"]
    }
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}

